    <!-- Calendly Widget Script -->
    <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
    <script>
    // Simple hero carousel logic
    (function() {
        const panes = document.querySelectorAll('#hero-carousel .carousel-pane');
        const indicators = document.querySelectorAll('.carousel-indicator');
        let current = 0;
        function showPane(idx) {
            panes.forEach((pane, i) => {
                pane.style.display = i === idx ? 'block' : 'none';
            });
            indicators.forEach((ind, i) => {
                ind.classList.toggle('opacity-80', i === idx);
                ind.classList.toggle('opacity-40', i !== idx);
            });
            current = idx;
        }
        indicators.forEach((ind, i) => {
            ind.addEventListener('click', () => showPane(i));
        });
        setInterval(() => {
            showPane((current + 1) % panes.length);
        }, 5000);
    })();
    </script>
